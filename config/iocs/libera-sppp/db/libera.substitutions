# Environment port database
file "libera_env.template" {
pattern
{PORT, DEVICE}
{ENV, __IOC_PREFIX__:ENV:}
}

# Fast Application port database reading/writing 8192 samples
file "libera_fa.template" {
pattern
{PORT, DEVICE}
{FA, __IOC_PREFIX__:FA:}
}

# ADC port database reading 1024 samples max
file "libera_adc.template" {
pattern
{PORT, DEVICE, NELM}
{ADC, __IOC_PREFIX__:ADC:, 1024}
}

# Slow Acquisition port database
file "libera_sa.template" {
pattern
{PORT, DEVICE}
{SA, __IOC_PREFIX__:SA:}
}
